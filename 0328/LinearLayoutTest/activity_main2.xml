<?xml version="1.0" encoding="utf-8"?>
<!-- RelativeLayout 버전 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- 로고 이미지 -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="296dp"
        android:layout_height="185dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"
        android:src="@drawable/guess" />

    <!-- 아이디 라벨 -->
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="16sp"
        android:layout_below="@id/logo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <!-- 아이디 입력 -->
    <EditText
        android:id="@+id/et_id"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_id"
        android:layout_marginStart="63dp"
        android:layout_toEndOf="@id/tv_id"
        android:background="@android:drawable/edit_text"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingHorizontal="12dp" />

    <!-- 패스워드 라벨 -->
    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="패스워드"
        android:textSize="16sp"
        android:layout_below="@id/et_id"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <!-- 패스워드 입력 -->
    <EditText
        android:id="@+id/et_pw"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_pw"
        android:layout_marginStart="46dp"
        android:layout_toEndOf="@id/tv_pw"
        android:background="@android:drawable/edit_text"
        android:hint="••••"
        android:inputType="textPassword"
        android:paddingHorizontal="12dp" />

    <!-- 로그인 버튼 -->

    <!-- 회원 가입 버튼 -->

    <!-- 메시지 표시 -->

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/et_pw"
        android:layout_alignParentStart="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#673AB7"
        android:text="로그인"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignBaseline="@id/btn_login"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@id/btn_login"
        android:backgroundTint="#9575CD"
        android:text="회원 가입"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="366dp"
        android:layout_height="249dp"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="22dp"
        android:background="#F4F4F4"
        android:padding="12dp"
        android:text="입력한 내용이 여기에 표시됩니다."
        android:textSize="14sp" />
</RelativeLayout>


