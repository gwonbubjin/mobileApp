<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- 이미지 영역을 감싸는 FrameLayout -->
    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#FFFFFF"> <!-- 기본 흰색으로 설정 -->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_boy"
            android:scaleType="fitCenter" />
    </FrameLayout>


    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnColor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color 1" />

        <Button
            android:id="@+id/btnColor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color 2" />

        <Button
            android:id="@+id/btnColor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color 3" />

        <Button
            android:id="@+id/btnColor4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color 4" />
    </LinearLayout>

</LinearLayout>
